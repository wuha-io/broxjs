{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "0.1.0",
  "author": "Arnaud Laval <alaval@wuha.io>",
  "description": "This is a default description.",
  "extension_url": "",
  "update_url": "/update",
  "default_locale": "en",
  "icons": {
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "38": "images/icon-38.png"
    },
    "default_title": "My Extension",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": [
      "app/background.js"
    ],
    "page": "html/background.html"
  },
  "permissions": [],
  "content_scripts": [
    {
      "exclude_matches": [],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [],
      "css": [],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
